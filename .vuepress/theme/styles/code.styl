{$contentClass}
  code
    color #e7136f
    padding 2px 6px
    margin 0
    font-size 1em
    font-weight bold
    font-size 14px
    background-color #44444455
    border-radius 6px
    font-family source-code-pro,Menlo,Monaco,Consolas,Courier New,monospace;
    .token
      &.deleted
        color #EC5975
      &.inserted
        color $accentColor

{$contentClass}
  pre, pre[class*="language-"]
    line-height 1.4
    // padding 1.25rem 1.5rem
    margin 0.3rem 0
    background-color $codeBgColor
    // border-radius 6px
    overflow auto
    padding 0
    code
      padding 0
      font-size 0.9rem
      color #fff
      background-color transparent
      font-weight normal
      // border-radius 0



div[class*="language-"]
  // margin-top 0.8rem
  position relative
  padding-left 1rem
  padding-bottom 0.5rem
  background-color $codeBgColor
  background-clip padding-box
  box-shadow 0 10px 10px 0 rgba(0,0,0,0.2)
  border-radius 6px
  border-top 1.8rem solid rgba(0, 0, 0, 0.3)
  .highlight-lines
    user-select none
    // padding-top 1.3rem
    position absolute
    top 0
    left 0
    width 100%
    line-height 1.4
    .highlighted
      background-color rgba(0, 0, 0, 66%)
  pre, pre[class*="language-"]
    background transparent
    position relative
    z-index 1
  &::before
    // position absolute
    // z-index 3
    // top 0.8em
    // right 1em
    // font-size 0.75rem
    // color rgba(255, 255, 255, 0.4)
    background #fc625d
    border-radius 50%
    box-shadow 20px 0 #fdbc40, 40px 0 #35cd4b
    content ' '
    height 0.8em
    left 12px
    position absolute
    width 12px
    margin-top -1.2rem
  &:not(.line-numbers-mode)
    .line-numbers-wrapper
      display none
  &.line-numbers-mode
    .highlight-lines .highlighted
        position relative
        &:before
          content ' '
          position absolute
          z-index 3
          left 0
          top 0
          display block
          // width $lineNumbersWrapperWidth
          height 100%
          background-color rgba(0, 0, 0, 66%)
    pre
      // padding-left $lineNumbersWrapperWidth + 1 rem
      padding-left 1.5rem
      vertical-align middle
    .line-numbers-wrapper
      position absolute
      top 0.3rem
      // width $lineNumbersWrapperWidth
      width 2rem
      text-align center
      color rgba(255, 255, 255, 0.3)
      margin-left -1rem
      line-height 1.4
      br
        user-select none
      .line-number
        position relative
        z-index 4
        user-select none
        font-size 0.8rem
    &::after
      content ''
      position absolute
      z-index 2
      top 0
      left 0
      // width $lineNumbersWrapperWidth
      width 2rem
      height 100%
      border-radius 6px 0 0 6px
      // border-right 1px solid rgba(0, 0, 0, 66%)
      background-color transparentify(#fff, 0.03)

for lang in $codeLang
  div{'[class~="language-' + lang + '"]'}
    &:before
      content ('' + lang)

div[class~="language-javascript"]
  &:before
    content "js"

div[class~="language-typescript"]
  &:before
    content "ts"

div[class~="language-markup"]
  &:before
    content "html"

div[class~="language-markdown"]
  &:before
    content "md"

div[class~="language-json"]:before
  content "json"

div[class~="language-ruby"]:before
  content "rb"

div[class~="language-python"]:before
  content "py"

div[class~="language-bash"]:before
  content "sh"

div[class~="language-php"]:before
  content "php"

@import '~prismjs/themes/prism-funky.css'
