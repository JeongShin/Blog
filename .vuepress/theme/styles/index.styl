@require './config'
@require './code'
@require './custom-blocks'
@require './arrow'
@require './wrapper'
@require './toc'
@import url('https://fonts.googleapis.com/css2?family=Nanum+Gothic:wght@400;700;800&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Source+Code+Pro:ital@0;1&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@1,500&display=swap');


html, body
  padding 0
  margin 0
  background #1d1f21

body
  font-family "Nanum Gothic",-apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-size 15px
  color $textColor

.page
  padding-left $sidebarWidth

.navbar
  background-color #1d1f21
  position fixed
  z-index 30
  top 0
  left 0
  right 0
  height $navbarHeight
  box-sizing border-box
  border-bottom 1px solid $borderColor

.sidebar-mask
  position fixed
  z-index 9
  top 0
  left 0
  width 100vw
  height 100vh
  display none

.sidebar
  font-size 16px
  width $sidebarWidth
  position fixed
  z-index 10
  margin 0
  top $navbarHeight
  left 0
  bottom 0
  box-sizing border-box
  border-right 1px solid $borderColor
  overflow-y auto

// 직접 추가 내용
.siteFooter
  height 20px;
  text-align center;
  font-size 13px;
  padding 30px 0;
  margin-bottom: 5%;
  // margin-left: 19rem;

.search-box input
  background-color #1b1b1b !important

.suggestions
  background-color #1b1b1b !important

.suggestion 
  &.focused
    background-color transparentify(#f3f4f5, 0.8) !important



{$contentClass}:not(.custom)
  @extend $wrapper
  > *:first-child
    margin-top $navbarHeight

  a:hover
    text-decoration underline

  p.demo
    padding 1rem 1.5rem
    border 1px solid #ddd
    border-radius 4px

  img
    max-width 100%

{$contentClass}.custom
  padding 0
  margin 0

  img
    max-width 100%

a
  font-weight 500
  color #ff379a
  text-decoration none

p a code
  font-weight 400
  color #ff379a

kbd
  background #eee
  border solid 0.15rem #ddd
  border-bottom solid 0.25rem #ddd
  border-radius 0.15rem
  padding 0 0.15em

blockquote
  font-style italic
  background-color transparentify(#fff, 0.03)
  font-size 1rem
  color #fff
  border-left .4rem solid #6b95fa
  border-radius 4px
  margin 1rem 0
  padding .25rem 0 .25rem 1rem

  & > p
    margin 0

ul, ol
  padding-left 1.2em

// strong
//   color #fdcc0d
//   font-weight 600
strong
  font-size 14px
  color #18ec90
  font-weight bold

  // padding 0.25rem 0.5rem
  margin 0
  // background-color #1b1b1b
  // border-radius 3px

h1, h2, h3, h4, h5, h6
  // font-family: "Do Hyeon"
  font-weight 800
  line-height 1.25

  {$contentClass}:not(.custom) > &
    margin-top (0.5rem - $navbarHeight)
    padding-top ($navbarHeight + 1rem)
    margin-bottom 0

    &:first-child
      margin-top -1.5rem
      margin-bottom 1rem

      + p, + pre, + .custom-block
        margin-top 2rem

  &:hover .header-anchor
    opacity: 1

h1
  color $accentColor
  font-size 2.7rem

h2
  color #a4b7fd
  font-size 2.2rem
  padding-bottom .3rem

h3
  // color #cac8fe
  font-size 1.5rem
h4 
  font-size 1.2rem

a.header-anchor
  font-size 0.85em
  float left
  margin-left -0.87em
  padding-right 0.23em
  margin-top 0.125em
  opacity 0

  &:hover
    text-decoration none

code, kbd, .line-number
  // font-family source-code-pro, Menlo, Monaco, Consolas, "Courier New", monospace

p, ul, ol
  line-height 1.7

hr
  border 0
  border-top 1px solid $borderColor

table
  border-collapse collapse
  margin 1rem 0
  display: block
  overflow-x: auto

tr

  &:nth-child(2n)
    background-color transparentify(#FFF, 0.05)

th
  color #677bfa

th, td
  border 1px solid transparentify(#FFF, 0.3)
  padding .6em 1em

.theme-container
  &.sidebar-open
    .sidebar-mask
      display: block

  &.no-navbar
    {$contentClass}:not(.custom) > h1, h2, h3, h4, h5, h6
      margin-top 1.5rem
      padding-top 0

    .sidebar
      top 0

.theorem
  margin 1rem 0
  padding .1rem 1.5rem
  border-radius 0.4rem
  background-color transparentify(#e5ebf4, 0.88)
  color #393e45
  .title
    font-weight bold

.custom-block
  &.right
    color transparentify(#393e45, 0.4)
    font-size 0.9rem
    text-align right

@media (min-width: ($MQMobile + 1px))
  .theme-container.no-sidebar
    .sidebar
      display none

    .page
      padding-left 0

div.theme-default-content:not(.custom) {
    max-width: 1024px;
}

@require 'mobile.styl'


